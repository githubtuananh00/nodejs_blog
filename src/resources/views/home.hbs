<h1>Home Page</h1>
<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="card" style="width: 18rem;">
        <a href="/courses/{{this.slug}}">
            <img src="{{this.img}}" class="card-img-top">
        </a>
        <div class="card-body">
            <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Ok</a>
        </div>
        </div>
        {{/each}}
    </div>
</div>